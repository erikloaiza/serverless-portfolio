{
  "name": "zemoga-portfolio-serverless",
  "version": "1.0.0",
  "description": "",
  "watch": {
    "compile": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,tsx,html"
    }
  },
  "scripts": {
    "watch": "npm-watch",
    "start": "npm install && sam local start-api",
    "dev": "concurrently \"npm run watch\" \"sam local start-api --log-file sam.log\"",
    "test": "jest",
    "build": "tsc",
    "lint": "gts lint",
    "clean": "gts clean & rimraf dist/",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "npm run compile && husky install",
    "pretest": "npm run compile",
    "posttest": "npm run lint",
    "precommit": "npm run fix && npm run prepare",
    "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css dist/",
    "postcompile": "npm run clean && tsc && npm run copy-files",
    "seed": "ts-node ./src/seeders/index.ts"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.83",
    "@types/faker": "^5.5.8",
    "@types/jest": "^27.0.1",
    "@types/node": "^14.11.2",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^6.2.1",
    "copyfiles": "^2.4.1",
    "dotenv": "^10.0.0",
    "faker": "^5.5.3",
    "gts": "^3.1.0",
    "husky": "^6.0.0",
    "jest": "^27.0.6",
    "npm-watch": "^0.11.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@aws/dynamodb-data-mapper": "^0.7.3",
    "@aws/dynamodb-data-mapper-annotations": "^0.7.3",
    "aws-sdk": "^2.973.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
